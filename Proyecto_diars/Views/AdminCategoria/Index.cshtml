@{ Layout = "_AdminLayout"; }


<div class="container-fluid">
    <div class="row page-title clearfix">
        <div class="page-title-left">
            <h6 class="page-title-heading mr-0 mr-r-5">Categorias</h6>
            <a class="float-right btn btn-primary mt-3" href="/admincategoria/create">Registrar categoria</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre_Categoria</td>
                        <td><a href="/admincategoria/eliminar/@item.Id" class="btn btn-danger">Eliminar </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
