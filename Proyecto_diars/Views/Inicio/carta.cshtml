


@{ Layout = "_LayoutUsuario"; }
<!DOCTYPE html>
<html>
<head>
    <title>Restaurante</title>
    <link href="~/plantillas_usuario/plantilla_usuario/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/plantillas_usuario/plantilla_usuario/css/team.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/plantillas_usuario/plantilla_usuario/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/plantillas_usuario/plantilla_usuario/css/font-awesome.css" rel="stylesheet">
    <link href="~/plantillas_usuario/plantilla_usuario/css/easy-responsive-tabs.css" rel='stylesheet' type='text/css' />


    <link href="~/plantillas_usuario/plantilla_usuario/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/plantillas_usuario/plantilla_usuario/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/plantillas_usuario/plantilla_usuario/css/font-awesome.css" rel="stylesheet">
    <link href="~/plantillas_usuario/plantilla_usuario/css/easy-responsive-tabs.css" rel='stylesheet' type='text/css' />
    <!-- //for bootstrap working -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- header -->
    <!-- header-bot -->


    <div class="clearfix"></div>

    <!-- //header-bot -->
    <!-- banner -->
        <div class="container">
            <div class="top_nav_right">
                <div class="wthreecartaits wthreecartaits2 cart cart box_1">
                    <form action="/carrito/carrito" method="post" class="last">
                        <button class="w3view-cart" type="submit" name="submit" value=""><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></button>
                    </form>

                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    <!-- //banner-top --
    <!-- /banner_bottom_agile_info -->
    <!-- banner-bootom-w3-agileits -->
    <!-- /new_arrivals -->
    <div class="new_arrivals_agile_w3ls_info">
        <div class="container">
            @*<h3 class="wthree_text_info">Platos <span>a la carta</span></h3>*@
            <div id="horizontalTab">
                <ul class="resp-tabs-list">
                    <li> Todos</li>
                    <li> <a href="https://localhost:44348/inicio/menus"> Menus</a></li>
                    @*<li> Parrillas</li>
                        <li> Menus</li>
                        <li> Pollos</li>*@
                </ul>
                <div class="resp-tabs-container">
                    <!--/tab_one-->
                    <div class="tab1">
                        @foreach (var item in Model)
                        {


                            <div class="col-md-3 product-men">
                                <div class="men-pro-item simpleCart_shelfItem">
                                    <div class="men-thumb-item">
                                        <img src="@item.Imagen" alt="" class="pro-image-front">
                                        <img src="@item.Imagen" alt="" class="pro-image-back">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="https://localhost:44348/inicio/detalle?id=@item.Id_producto" class="link-product-add-cart">Detalle</a>
                                            </div>
                                        </div>
                                        @*<span class="product-new-top">New</span>*@

                                    </div>
                                    <form action="https://localhost:44348/carrito/create" method="post">
                                        <div class="item-info-product ">
                                            <h4><a href="single.html">@item.Nombre</a></h4>
                                            <div class="info-product-price">
                                                <span class="item_price text-center">S/@item.Precio</span>
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <input class="form-control" type="text" name="Cantidad" placeholder="Agregar cantidad" />
                                                    @Html.ValidationMessage("Cantidad")
                                                }

                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">

                                                <fieldset>

                                                    <input type="hidden" name="Id_producto" value="@item.Id_producto" />
                                                    <input type="submit" name="submit" value="Agregar a pedido" class="button" />
                                                </fieldset>

                                            </div>

                                        </div>
                                    </form>
                                </div>

                            </div>
                        }
                    </div>
                    <!--//tab_one-->
                </div>
            </div>
        </div>
    </div>
    <!-- //new_arrivals -->
    <!-- //footer -->

    <a href="#home" class="scroll" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
    <!-- js -->
    <script type="text/javascript" src="~/plantillas_usuario/plantilla_usuario/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!-- cart-js -->
    <script src="~/plantillas_usuario/plantilla_usuario/js/minicart.min.js"></script>
    <script>
        // Mini Cart
        paypal.minicart.render({
            action: '#'
        });

        if (~window.location.search.indexOf('reset=true')) {
            paypal.minicart.reset();
        }
    </script>

    <!-- //cart-js -->
    <!-- stats -->
    <script src="~/plantillas_usuario/plantilla_usuario/js/jquery.waypoints.min.js"></script>
    <script src="~/plantillas_usuario/plantilla_usuario/js/jquery.countup.js"></script>
    <script>
        $('.counter').countUp();
    </script>
    <!-- //stats -->
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/plantillas_usuario/plantilla_usuario/js/move-top.js"></script>
    <script type="text/javascript" src="~/plantillas_usuario/plantilla_usuario/js/jquery.easing.min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <!-- here stars scrolling icon -->
    <script type="text/javascript">
        $(document).ready(function () {
            /*
                var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
                };
            */

            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <!-- //here ends scrolling icon -->
    <!-- for bootstrap working -->
    <script type="text/javascript" src="~/plantillas_usuario/plantilla_usuario/js/bootstrap.js"></script>
</body>
</html>
