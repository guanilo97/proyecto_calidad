




@{ Layout = "_AdminLayout"; }
<form method="post" action="/AdminProducto/Edit?Id_Producto=@Model.Id_producto">
    <div class="form-group">
        <label class="control-label">Nombre</label>
        <input value="@Model.Nombre" type="text" name="Nombre" />
    </div>
    <div class="form-group">
        <label class="control-label">Precio</label>
        <input value="@Model.Precio" type="text" name="Precio" />
    </div>
    <div class="form-group">
        <label class="control-label">Descripcion</label>
        <input value="@Model.Descripcion" type="text" name="Descripcion" />
    </div>
    <div class="form-group">
        <label>Imagen</label>
        <input type="file" name="file" />
        <img src="@Model.Imagen" alt="Alternate Text" />
    </div>
    <button>Guardar</button>
</form>
