




@{ Layout = "_AdminLayout"; }

<div class="container-fluid">
    <div class="row page-title clearfix">
        <div class="page-title-left">
            <h6 class="page-title-heading mr-0 mr-r-5">Productos registrados</h6>
            <a class="float-right btn btn-primary mt-3" href="/adminproducto/create">Registrar producto</a>
        </div>
    </div>
    <form method="get" action="/AdminProducto/Index">
        <select name="IdCategoria">
            <option value="">Seleccion de categoria</option>
            @foreach (var item in ViewBag.categorias)
            {
                <option value="@item.Id">@item.Nombre_Categoria</option>

            }

        </select>
        <button>Buscar</button>
    </form>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Categoria</th>
                <th>Opciones</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.Descripcion</td>
                    <td><img src="@item.Imagen" style="width:70px;height:80px" />  </td>
                    <td>@item.categorias.Nombre_Categoria</td>
                    <td><a href="/AdminProducto/Edit?id=@item.Id_producto">Editar</a></td>

                </tr>

            }
        </tbody>
    </table>
</div>

